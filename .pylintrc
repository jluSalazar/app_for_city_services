[MASTER]
# Número de procesos para ejecutar en paralelo (1 para evitar errores)
jobs=1

# Ignorar ciertos directorios o archivos
ignore=

# Ruta raíz para módulos importados
init-hook=

[FORMAT]
# Longitud máxima de línea según PEP8
max-line-length=100

# Espacios para la indentación
indent-string='    '

# Cantidad de espacios después de paréntesis en líneas continuadas
indent-after-paren=4

[BASIC]
# Estilo de nombres para variables
variable-naming-style=snake_case

# Estilo de nombres para funciones
function-naming-style=snake_case

# Estilo de nombres para clases
class-naming-style=PascalCase

# Estilo de nombres para constantes
const-naming-style=UPPER_CASE

# Nombres aceptables para variables cortas
good-names=i, j, k, ex, _

# Nombres prohibidos para variables
bad-names=foo, bar, baz

# Mínimo de caracteres para una función o clase que requiera un docstring
docstring-min-length=10

[TYPECHECK]
# Módulos ignorados en la verificación de tipos
ignored-modules=numpy, pandas

[DESIGN]
# Máximo de argumentos permitidos en una función
max-args=5

# Máximo de métodos públicos por clase
max-public-methods=20

[MESSAGES CONTROL]
# Desactiva advertencias no relacionadas con PEP8
disable=missing-docstring,            ; Docstrings obligatorios para PEP8
        too-few-public-methods,       ; Clases con pocos métodos
        too-many-instance-attributes, ; Evitar advertencias en clases complejas
        too-many-arguments            ; Evitar advertencias en funciones complejas

[IMPORTS]
# Desactiva el uso de imports con comodines (*)
allow-wildcard-with-all=no

# Orden de imports según PEP8
known-standard-library=sys,os,json
known-third-party=numpy,pandas
known-local-folder=src

[STRING]
# Consistencia en las comillas
check-quote-consistency=yes

[WHITESPACE]
# Espacios antes y después de operadores
no-space-check=

# Espacios innecesarios dentro de expresiones
check-str-concat-over-line-jumps=no

[REPORTS]
# Activar reportes colorizados
output-format=colorized
score=yes
